user www-data;
worker_processes auto;
pid /run/nginx.pid;

events { }

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;
  sendfile on;
  keepalive_timeout 65;

  server {
    listen {{ nginx_port }} default_server;
    server_name _;

    root {{ root_dir }};
    index index.html;

    location / {
      try_files $uri $uri/ =404;
    }
  }
}
